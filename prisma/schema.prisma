generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  count     Int       @default(5)
  History   History[]
}

model History {
  id          String   @id @default(uuid())
  template    String
  user_input  String
  ai_response String
  date        DateTime @default(now())
  user        User     @relation(fields: [userId], references: [email])
  userId      String
}

